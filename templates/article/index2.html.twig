============================-->
<section id="why-us"  class="wow fadeIn">
  <div class="container">
    <header class="section-header">
      <h3>Nos articles </h3>
      <p> Tous nos articles</p>
    </header>

    <div class="row row-eq-height justify-content-center">




      {% for article in articles %}
      <div class="col-lg-4 mb-4">
        <div class="card wow bounceInUp">
            <!-- <i class="fa fa-diamond"></i> -->
          <div class="card-body">
            <h5 class="card-title">{{ article.titre }}</h5>
            <p class="card-text">{{ article.contenu }}.</p>
            <a href="{{ path('article_show', {'id': article.id}) }}"class="readmore">Lire la suite</a>
            <!-- <a href=" {{path('article_index2') }} " class="readmore">Lire la suite</a> -->
          </div>
        </div>
      </div>

      {% endfor %}

<a href=" {{path('article_index2') }} " class="readmore">Plus d'articles</a>

    </div>


  </div>
</section>

