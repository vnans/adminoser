{% extends 'base.html.twig' %}

{% block title %}Souscription index{% endblock %}

{% block body %}

<div id="content-wrapper">

    <div class="container-fluid">

        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('default') }}">accueil</a>
            </li>
            <li class="breadcrumb-item active">Nouv souscription</li>
        </ol>



        <!-- Area Chart Example-->
