        <!-- DataTables Example -->
        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-table"></i>
                Liste des Nouv. souscriptions</div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                        <tr>
                            <th>Tel</th>
                            <th>Debut</th>
                            <th>Fin</th>
                            <th>Nombre</th>
                            <th>Reception</th>
                            <th>Service</th>

                        </tr>
                        </thead>

                        <tbody>
                        {% for souscription in souscriptions %}
                            <tr>

                                <td>{{ souscription.abonneId }}</td>
                                <td>{{ souscription.dateDebut ? souscription.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
                                <td>{{ souscription.dateFin ? souscription.dateFin|date('Y-m-d H:i:s') : '' }}</td>
                                <td>{{ souscription.nbre }}</td>
                                <td>{{ souscription.dateReception ? souscription.dateReception|date('Y-m-d H:i:s') : '' }}</td>
                                <td>{{ souscription.serviceId }}</td>

                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="12">Aucune souscription trouvée</td>
                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer small text-muted">Mis à jour  lundi  à 11:59 PM</div>
        </div>

    </div>




{% endblock %}
