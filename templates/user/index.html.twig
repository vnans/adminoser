        <!-- DataTables Example -->
        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-table"></i>
                Liste des Abonnés</div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                        <tr>
                            <th>Téléphone</th>
                            <th>Date de souscription</th>
                            <th>Statut</th>

                        </tr>
                        </thead>

                        <tbody>
                        {% for user in users %}
                            <tr>

                                <td>{{ user.tel }}</td>
                                <td>{{ user.dateCreation ? user.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
                                <td>{{ user.statut }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="12">Aucun abonné trouvé</td>
                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer small text-muted">Mis à jour  lundi  à 11:59 PM</div>
        </div>

    </div>
{% endblock %}
