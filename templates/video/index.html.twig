{% extends 'base.html.twig' %}

{% block title %}Video index{% endblock %}

{% block body %}
<div class="row">
  <div class="col-md-12">
    <h1>Liste des videos</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Lien</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for video in videos %}
            <tr>
                <td>{{ video.id }}</td>
                <td>{{ video.titre }}</td>
                <td>{{ video.lien }}</td>
                <td>
                    <!-- <a href="{{ path('video_show', {'id': video.id}) }}">show</a> -->
                    <a href="{{ path('video_edit', {'id': video.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun Enregisterement trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('video_new') }}">Ajouter une video</a>
  </div>
</div>
{% endblock %}
